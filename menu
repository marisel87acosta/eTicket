import os
from pruebafun import validar

def menu():
	while True:
		try:
			respuesta=int(input('Elegir Opcion: \n 1. Cargar multa\n 2. Salir \n'))
			if (respuesta == 1 or respuesta == 2):
				break			
			else:
				print("ERROR: Opcion no valida")
		except ValueError:
			print("ERROR: Opcion no valida")


